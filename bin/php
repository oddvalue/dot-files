#!/usr/bin/env bash

if [ -f "./vendor/bin/sail" ] && [ -z $PHP_VERSION ] ;
  then ./vendor/bin/sail php $@;
else
  if test -z $PHP_VERSION; then
    PHP_VERSION=8.0
  fi
  docker run --rm \
    -u "$(id -u):$(id -g)" \
    -v $(pwd):/opt \
    -v $HOME/.ssh:/home/php/.ssh \
    -w /opt \
    bozboz/ci:$PHP_VERSION php $@
fi
